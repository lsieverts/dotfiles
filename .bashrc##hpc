#!/bin/bash

# colors
export PS1="\[$(tput bold)\]\[$(tput setaf 1)\][\[$(tput setaf 3)\]\u\[$(tput setaf 2)\]@\[$(tput setaf 4)\]\h \[$(tput setaf 5)\]\W\[$(tput setaf 1)\]]\[$(tput setaf 7)\]\\$ \[$(tput sgr0)\]"

HISTSIZE= HISTFILESIZE= # Infinite history.

export PATH=/opt/pandoc/:~/.local/bin/:$PATH
# export R_INSTALL_STAGED=FALSE

export SPACK_ROOT=/opt/spack
. $SPACK_ROOT/share/spack/setup-env.sh

module use /opt/spack/share/spack/modules/linux-centos7-x86_64/
spack load /o3uv2jk
spack load /tsvynsq # neovim
spack load /7klqklq # ccache
spack load /x5e5mnz # byobu
spack load /2rbxot4 # gdal 3.0.1
# spack load /vbgkeil # gdal 2.4.2
spack load /hn6gflr # geos 3.7.2
#spack load /i25e6py # proj 6.1.0
spack load /az6mkj5 # proj 5.2.0
#spack load /3skzcql # proj 4.9.2
spack load /yuybfrv # zlib
spack load /gwikytn # openblas 0.3.7
spack load /zqkxl74 # curl

alias r352="export R_HOME=/opt/R/3.5.2/lib64/R && radian"
alias r353="export R_HOME=/opt/R/3.5.3/lib64/R && radian"
alias r360="export R_HOME=/opt/R/3.6.0/lib64/R && radian"
alias r361="export R_HOME=/opt/R/3.6.1/lib64/R && radian"

alias paper1="cd ~/papers/2018-model-comparison/ && r351"
alias paper2="cd ~/papers/2019-feature-selection/ && spack load udunits2 && r352"

LMOD_COLORIZE="YES"
alias r="radian"

